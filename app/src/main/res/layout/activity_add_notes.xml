<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rohit.studentdemo.AddNotes">

    <EditText
        android:id="@+id/editTextNoteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Note Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDiscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Discription"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bottonAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add notes" />
</LinearLayout>
